<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.vasu_linux.myapplication.MainActivity"
    android:background="@drawable/gradient"
    >


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="337dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ww" />

    <EditText
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="LUX:" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/b1"
            android:layout_width="150dp"
            android:layout_height="82dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@drawable/start"
            android:text="START" />

        <Button
            android:id="@+id/b2"
            android:layout_width="150dp"
            android:layout_height="82dp"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@drawable/newstop"
            android:text="Stop" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/b3"
            android:layout_width="150dp"
            android:layout_height="82dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@drawable/axis"
            android:text="Accelerometer" />

        <Button
            android:id="@+id/b4"
            android:layout_width="150dp"
            android:layout_height="82dp"
            android:layout_above="@+id/b3"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@drawable/ic_magnet"
            android:text="Magnetic Field" />

        <Button
            android:id="@+id/ex"
            android:layout_width="150dp"
            android:layout_height="82dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@null"
            android:drawableTop="@drawable/exit"
            android:text="Exit" />

    </RelativeLayout>

</LinearLayout>
